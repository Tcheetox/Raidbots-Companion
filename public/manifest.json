{
  "name": "Raidbots Companion",
  "version": "1.6.0",
  "manifest_version": 3,
  "description": "Easy character customization on Raidbots.com",
  "icons": {"128": "KRE128.png", "48" : "KRE48.png" },
  "action": {
    "default_icon": "KRE128.png",
    "default_popup": "index.html",
    "default_title" : "Raidbots Companion"
  },
  "permissions": [
    "tabs", "scripting"
  ],
  "host_permissions": [
    "https://www.raidbots.com/*",
    "https://raidbots.com/*"
  ],
  "web_accessible_resources": [{ 
    "resources": [ "data.json", "metadata.json" ],
    "matches": [ "https://thekecha.com/*", "https://www.thekecha.com/*" ]
    }
  ],
  "content_security_policy": { "script-src": "self", "object-src": "self"}
}
